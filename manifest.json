{
  "manifest_version": 3,
  "name": "Voice Browser Agent",
  "version": "0.1.0",
  "description": "Voice-driven browser sidecar agent with CDP automation",
  "permissions": [
    "sidePanel",
    "debugger",
    "activeTab",
    "scripting",
    "storage",
    "audioCapture"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "Voice Browser Agent"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
